<div class="container " style="margin:69px auto ; width:90%;">
    <div class="row">
        <div class="col-6 offset-3 ">

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Agregar una nueva producto</h3>
                </div>



                <form action="/admin/productos/agregarProducto" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label >Titulo</label>
                            <input type="text" class="form-control" placeholder="Titulo producto" name="title">
                        </div>
                        
                        <div class="col-sm-12">
                            <!-- textarea -->
                               <div class="form-group">
                            <label >Codigo de Articulo</label>
                            <input type="text" class="form-control" placeholder="Codigo de articulo" name="articulo">
                        </div>
                            <div class="form-group">
                                <label>Descripcion</label>
                                <textarea type="text" class="form-control" placeholder="Cuerpo"
                                    name="description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label >Categoria</label>
                             <select class="form-control" name="category">
                          <option>ELECTRONICA</option>
                          <option>MUJERES</option>
                          <option>HOMBRE</option>
                          <option>KIDS</option>
                          <option>VARIOS</option>
                        </select>
                            
                        </div>
                        <div class="form-group col-sm-6">
                            <label >Precio</label>
                            <div class="input-group-prepend">
                                 <span class="input-group-text">
                                <i class="fas fa-dollar-sign"></i>
                                </span>
                            <input type="text" class="form-control" placeholder="$" name="price">
                            </div>
                        </div>
                        
                        <div class="form-group col-sm-3">
                            <label >Rating</label>
                            <input type="text" class="form-control" placeholder="Rating" name="rating">
                        </div>
                        
                        <div class="form-group col-sm-3">
                            <label >Cantidad</label>
                            <input type="text" class="form-control" placeholder="Cantidad" name="cantidad">
                        </div>
                     

                  <div class=" form-group">
                            <label for="exampleInputFile">Subir Imagen</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="imagen" id="imagen">
                                    <label class="custom-file-label" for="exampleInputFile">Buscar Imagen</label>
                                </div>
                                <div class="input-group-append">
                                    <span class="input-group-text">Upload</span>
                                </div>
                            </div>
                        </div>
                        {{!-- <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div> --}}
                      
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>


                </form>




                {{#if error}}
                <br>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>{{message}}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                {{/if}}

            </div>



        </div>

    </div>
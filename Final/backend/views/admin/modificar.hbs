

<div class="container " style="margin:69px auto ; width:90%;">
    <div class="row">
        <div class="col-6 offset-3 ">

          <div class="card card-warning">
              <div class="card-header">
                    <h3 class="card-title">Modificar Novedad</h3>
                </div>

                <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                 <input type='hidden' value='{{novedad.id}}' name="id">
                    <div class="card-body">
                        <div class="form-group">
                            <label >Titulo</label>
                            <input type='text' class='form-control' placeholder='titulo' name='titulo'
                        value="{{novedad.titulo}}">
                        </div>
                        <div class="form-group">
                            <label >Fecha</label>
                            <input type='date' class='form-control'step="1" min="2000-01-01" max="2050-12-31" placeholder="Fecha AAA-MM-DD" name='fecha' value="{{novedad.fecha}}">
                  </div>
                  <div class=" form-group">
                            <label for="exampleInputFile">Subir Imagen</label>
                            <div class="input-group">
                                <div class="custom-file">
                               <input type="file" class="custom-file-input" placeholder="Imagen" id="imagen" name="imagen"
                        value="{{novedad.imagen}}">
                                    <label class="custom-file-label" for="exampleInputFile">Buscar Imagen</label>
               
                                </div>
                                  <div class="form-check"></div>
                                     <p>
                        
                        <label style='margin-top:10px'><input class="form-check-input" type="checkbox"  name="img_delete" id="img_delete" value="1">  Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.imagen}}">
                        
                    </p>
                    </div>
                                <div class="input-group-append">
                                    <span class="input-group-text">Upload</span>
                                </div>
                            </div>
                        </div>
                        {{!-- <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div> --}}
                        <div class="col-sm-12">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Descripcion</label>
                                     <textarea type="text" class="form-control" placeholder="cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Modificar</button>
                    </div>


                </form>




                     {{#if error}}
            <br>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{message}}</strong> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
            
            {{/if}}

            </div>



        </div>

    </div>




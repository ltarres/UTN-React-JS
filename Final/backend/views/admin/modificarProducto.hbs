

<div class="container " style="margin:69px auto ; width:90%;">
    <div class="row">
        <div class="col-6 offset-3 ">

          <div class="card card-warning">
              <div class="card-header">
                    <h3 class="card-title">Modificar Novedad</h3>
                </div>


    <form action="/admin/productos/modificarProducto" method="post" enctype="multipart/form-data">
    <input type='hidden' value='{{producto.id}}' name="id">
    
                    <div class="card-body">
                        <div class="form-group">
                            <label >Titulo</label>
                            <input type='text' class='form-control' placeholder='titulo' name='title' value="{{producto.title}}">
                        </div>
                        
                        <div class="col-sm-12">
                            <!-- textarea -->
                               <div class="form-group">
                            <label >Codigo de Articulo</label>
                            <input type="text" class="form-control" placeholder="Codigo de articulo" name="articulo" value="{{producto.articulo}}">
                        </div>
                            <div class="form-group">
                                <label>Descripcion</label>
                                    
                                <textarea type="text" class="form-control" placeholder="Cuerpo" name="description">{{producto.description}}</textarea>
                            </div>
                        </div>

                             <div class="form-group">
                            <label >Categoria</label>
                             <select class="form-control" name="category"  >
                         <option selected="selected"> "{{producto.category}}"</option>
                          <option>ELECTRONICA</option>
                          <option>MUJERES</option>
                          <option>HOMBRE</option>
                          <option>KIDS</option>
                          <option>VARIOS</option>
                        </select>
                            
                        <div class="form-group col-sm-6">
                            <label >Precio</label>
                            <input type="text" class="form-control" placeholder="$" name="price" value="{{producto.price}}">
                        </div>
                        <div class="form-group col-sm-3">
                            <label >Rating</label>
                            <input type="text" class="form-control" placeholder="Rating" name="rating" value="{{producto.rating}}">
                        </div>
                        
                        <div class="form-group col-sm-3">
                            <label >Cantidad</label>
                            <input type="text" class="form-control" placeholder="Cantidad" name="cantidad "value="{{producto.cantidad}}">
                        </div>
                     

                  <div class=" form-group">
                            <label for="exampleInputFile">Subir Imagen</label>
                            <div class="input-group">
                                <div class="custom-file">
                               <input type="file" class="custom-file-input" placeholder="Imagen" id="imagen" name="imagen"
                        value="{{producto.imagen}}">
                                    <label class="custom-file-label" for="exampleInputFile">Buscar Imagen</label>
               
                                </div>
                                  <div class="form-check"></div>
                                     <p>
                        
                        <label style='margin-top:10px'><input class="form-check-input" type="checkbox"  name="img_delete" id="img_delete" value="1">  Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.imagen}}">
                        
                    </p>
                    </div>
                        {{!-- <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div> --}}
                      
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>


                </form>




                     {{#if error}}
            <br>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{message}}</strong> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" > 
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
            
            {{/if}}

            </div>



        </div>

    </div>




<div class='container' style='margin:20px auto'>
    <div class="row">
        <div class='col-6 offset-3'>
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type='hidden' value='{{novedad.id}}' name="id">
                <label for="">Titulo</label>
                <div class="mb-3 row">
                    <input type='text' class='form-control' placeholder='titulo' name='titulo'
                        value="{{novedad.titulo}}">
                </div>
                <label for="">Fecha</label>
                <div class="mb-3 row">
                    <input type='date' class='form-control'step="1" min="2000-01-01" max="2050-12-31" placeholder="Fecha AAA-MM-DD" name='fecha' value="{{novedad.fecha}}">
                </div>
                <label for="">Cuerpo</label>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <input type="file" class="form-control" placeholder="Imagen" id="imagen" name="imagen"
                        value="{{novedad.imagen}}">
                    <p>
                        <label style='margin-top:10px'><input type="checkbox"  name="img_delete" id="img_delete" value="1">  Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.imagen}}">
                    </p>
                </div>
                <button type="submit" class='btn btn-primary'>Modificar</button>
            </form>
     

   
            {{#if error}}
            <br>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{message}}</strong> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
            
            {{/if}}
    </div>



    </div>

</div>
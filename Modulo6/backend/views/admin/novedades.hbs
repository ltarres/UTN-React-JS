<div class="container_nov"  style="margin-top:20px; width:90%; margin:auto">
    <div class="row">
        <p class="text-end" style="padding:10px;color:rgb(247, 247, 247); font-size:20px"> "Hola!! {{persona}}"  <a class='btn btn-danger' href='/admin/login/logout'> Cerrar Sesion <i class='fas fa-sign-out-alt'></i></a></p>

    </div>

    <div class="row">
        <div class='col-7'>
            <h3> Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>

    </div>
                                      

    <div class="row">
        <div class="col">
            <table class="table text-white ">
                <thead class="thead-dark">
                    <tr>
                        <th scope='col'>#</th>  
                        <th scope='col'>Imagen</th>
                        <th scope='col'>Titulo</th>
                        <th scope='col'>Fecha</th>
                        <th scope='col'>Cuerpo</th>    
                        <th scope='col' class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{titulo}}</td>
                        <td>{{{fecha}}}</td>
                        <td>{{{cuerpo}}}</td>
                        <td class="text-end"> 
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn btn-warning">
                            <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-danger" >
                            {{!-- data-toggle="modal" data-target="#my-modal" --}}
                            <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>



    <div id="my-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content border-0">   
                <div class="modal-body p-0">
                    <div class="card border-0 p-sm-3 p-2 justify-content-center">
                        <div class="card-header pb-0 bg-white border-0 "><div class="row"><div class="col ml-auto"><button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button></div> </div>
                        <p class="font-weight-bold mb-2"> Esta Seguro de Eliminar?</p><p class="text-muted "> los cambios eliminados no se pueden recuperar.</p>     </div>
                        <div class="card-body px-sm-4 mb-2 pt-1 pb-0"> 
                            <div class="row justify-content-end no-gutters">
                                <div class="col-auto">
                                    <button type="button" class="btn btn-light text-muted" data-dismiss="modal">Cancelar</button>
                                </div>
                                <div class="col-auto">
                                        <button type="button" class="btn btn-danger px-4" data-dismiss="modal"  >Eliminar</button></div>
                                </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>




</div>